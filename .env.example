# Docker Images
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Active Pool Configuration
# Options: blue | green
ACTIVE_POOL=blue

# Release Identifiers
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Optional: Application Port (default: 3000)
PORT=3000


# Stage 3: Observability & Alerts
# Slack Webhook URL for alerts (required for Stage 3)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Error rate threshold percentage (default: 2.0)
ERROR_RATE_THRESHOLD=2.0

# Window size for error rate calculation (default: 200 requests)
WINDOW_SIZE=200

# Alert cooldown in seconds to prevent spam (default: 300 = 5 minutes)
ALERT_COOLDOWN_SEC=300